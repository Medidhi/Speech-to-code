<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:background="@drawable/side_nav_bar"

    android:layout_height="match_parent"


    tools:context="com.example.venkat.and.MainActivity">

    <RelativeLayout
    android:layout_width="match_parent"

    android:layout_height="match_parent">

        <include layout="@layout/bar"
            android:layout_height="50dp"
            android:layout_width="match_parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="#066d06"
        android:id="@+id/textView"
        android:clickable="true"
        android:onClick="clk"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp" />

    <TextView
        android:text="c++"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView" />

        <TextView
        android:text="ABOUT"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:onClick="abt"
        android:layout_alignTop="@+id/imageView"
        android:textColor="#e4230c"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="14dp" />

    <TextView
        android:text="Developers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="12dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="Designers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/abt"
            android:id="@+id/imageView"
            android:layout_marginBottom="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp" />

        <TextView
        android:text="SAMPLE CODES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:clickable="true"
        android:onClick="Samp"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textColor="#e40cc7"
            android:layout_marginStart="36dp"
            android:layout_above="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginBottom="106dp" />
        <!--
            <android.support.design.widget.NavigationView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:menu="@menu/navigation"
                android:layout_gravity="start">



            </android.support.design.widget.NavigationView>

        -->
</RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/navigation"
        android:layout_gravity="start"
        app:headerLayout="@layout/head" >



    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
